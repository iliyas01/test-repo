#install minikube through driver(example docker)
#start minikube($minikube start)
#start docker environ in minikube($eval $(minikube docker-env)))
#build image in minikube to run in minikube($docker build -t (imagename) .)
#create deployment and service file(deployment.yaml)
#run following command to deploy app and create pod with service($ kubectl apply -f deployment.yaml)
#to see created pods ($kubectl get po)
#to run service in web through hosting ($minikube service (servicename))
#login to heroku($heroku login and $heroku container :login)
#create heroku app($heroku create (herokuappname))
#all steps should be in your branch 
#to set git to heroku app($heroku git:remote -a (herokuappname))
#to check git remote heroku($git remote -v)
#add evrything to your git branch($git add .)
#commit what you did($git commit)
#push to heroku($git push heroku web)
#push to heroku container($heroku container:push web)
#release your heroku container($heroku container:release web)
#done!!
#check your app deployed in heroku in browser((herokuappname).herokuapp.com)